<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#2FC99A"
    tools:context="msd.com.contacts.AddContact">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ContactName"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Name"
        android:textColorHint="#777373"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ContactPhone"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:ems="10"
        android:hint="Mobile"
        android:textColorHint="#777373"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ContactEmail"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:hint="Email"
        android:textColorHint="#777373"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Address"
        android:textSize="16dp"
        android:gravity="center"
        android:ems="10"
        android:id="@+id/switch1"
        android:layout_marginTop="230dp"
        android:layout_alignRight="@+id/saveContact"
        android:layout_alignEnd="@+id/saveContact" />


    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/Latitude"
        android:singleLine="true"
        android:layout_below="@+id/switch1"
        android:ems="10"
        android:hint="Latitude"
        android:textColorHint="#777373"
        android:layout_alignRight="@+id/saveContact"
        android:layout_alignEnd="@+id/saveContact" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/Longitude"
        android:singleLine="true"
        android:layout_below="@+id/switch1"
        android:ems="10"
        android:hint="Longitude"
        android:textColorHint="#777373"
        android:layout_toRightOf="@+id/Latitude"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AddressName"
        android:singleLine="true"
        android:ems="10"
        android:hint="AddressName"
        android:textColorHint="#777373"
        android:layout_below="@+id/Latitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/Address"
        android:ems="10"
        android:hint="Address"
        android:textColorHint="#777373"
        android:layout_below="@+id/AddressName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--<Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveContact"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:onClick="addContact"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />-->


    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/oval_add"
        android:id="@+id/saveContact"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:onClick="addContact"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="1dp"
        android:src="@mipmap/save" />


    <!--<Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancelContact"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:layout_alignTop="@+id/saveContact"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="cancel"/>-->

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/oval_cancel"
        android:id="@+id/cancelContact"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:onClick="cancel"
        android:layout_alignTop="@+id/saveContact"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/cancel" />


</RelativeLayout>
