<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#2FC99A" tools:context="msd.com.contacts.Delete">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/searchName"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:hint="Enter Name"/>

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_alignParentRight="true"
        android:onClick="searchContact" />
    <!-- android:id="@+id/button" -->
    <!-- android:layout_toRight="@+id/searchName" -->

    <!--<TextView
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Here"
        android:id="@+id/email"
        android:layout_below="@+id/phone"
        android:textAppearance="?android:textAppearanceLarge"/>

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Here"
        android:id="@+id/phone"
        android:layout_below="@+id/searchName"
        android:textAppearance="?android:textAppearanceLarge"/>-->


    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile: "
        android:id="@+id/txtmobile"
        android:layout_below="@+id/searchName"
        android:layout_marginLeft="1dp"
        android:textAppearance="?android:textAppearanceLarge"/>

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtmobile"
        android:text="Mobile Here"
        android:id="@+id/phone"
        android:layout_below="@+id/searchName"
        android:textAppearance="?android:textAppearanceLarge"/>

    <TextView
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:id="@+id/txtemail"
        android:layout_marginLeft="1dp"
        android:textAppearance="?android:textAppearanceLarge"/>


    <TextView
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtemail"
        android:text="Email Here"
        android:id="@+id/email"
        android:textAppearance="?android:textAppearanceLarge"/>

    <!--<Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:id="@+id/delete"
        android:onClick="deleteContact"
        android:layout_marginTop="200dp" />-->

    <ImageButton
        android:background="#2FC99A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="150dp"
        android:paddingRight="150dp"
        android:layout_marginTop="200dp"
        android:onClick="deleteContact"
        android:id="@+id/delete"
        android:src="@mipmap/delete" />


</RelativeLayout>
